{
  "private": true,
  "name": "coolkidssatit",
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/pm-station-firebase/functions"
  ],
  "scripts": {
    "test": "turbo run test --parallel",
    "client:dev": "yarn workspace client-web dev",
    "client:test": "turbo run test --filter=!client-web-test --parallel",
    "kiosk:dev": "turbo run dev --filter=kiosk-web... --parallel",
    "kiosk": "yarn workspace kiosk-web",
    "bootstrap": "turbo run bootstrap --no-cache",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "postinstall": "patch-package",
    "update": "lernaupdate --lazy"
  },
  "dependencies": {
    "@lemasc/swr-firestore": "^2.2.1",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "patch-package": "^6.5.0",
    "turbo": "^1.6.3"
  },
  "devDependencies": {
    "@types/node": "^18.15.5",
    "cross-env": "^7.0.3",
    "cypress": "^12.8.1",
    "eslint": "^8.30.0",
    "lerna-update-wizard": "^1.1.2"
  },
  "resolutions": {
    "axios": "0.27.2",
    "firebase": "9.9.3",
    "@lemasc/firebase-wrapper": "1.1.1"
  }
}