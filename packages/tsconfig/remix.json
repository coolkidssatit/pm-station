{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Remix Run",
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2019"
        ],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "ESNext",
        "target": "ES2019",
        "strict": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules"
    ]
}